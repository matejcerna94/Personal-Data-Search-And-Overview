<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PretraziOsobuZaUredivanjeActivity">

    <LinearLayout
        android:elevation="1dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:elevation="1dp"
        android:textColor="@color/colorWhite"
        android:id="@+id/text_view_trazi_admina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Traži osobu za uređivanje"
        android:textSize="35dp"
        android:gravity="center"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search_white_36dp" />

            <EditText
                android:textColor="@color/colorWhite"
                android:elevation="1dp"
                android:paddingStart="9dp"
                android:background="@drawable/edit_text"
                android:id="@+id/trazi_osobu_za_uredivanje_txt"
                android:layout_below="@id/text_view_trazi_osobe"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:hint="Unesite tekst za pretragu"
                android:textCursorDrawable="@drawable/bijeli_pokazivac"
                android:textColorHint="@color/colorWhite" />

        </LinearLayout>









    <GridView
        android:paddingTop="10dp"
        android:elevation="1dp"
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="10dp"/>



    </LinearLayout>

    <ImageView
        android:id="@+id/pozadina"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pozadina_plava" />

</RelativeLayout>